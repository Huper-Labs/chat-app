# Database Configuration
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://postgres:changeme@postgres:5432/openwebui

# Open WebUI Core Configuration
WEBUI_SECRET_KEY=changeme
WEBUI_NAME=Open WebUI
WEBUI_URL=http://localhost:3000
ENV=prod

# LiteLLM Configuration
LITELLM_MASTER_KEY=changeme
LITELLM_SALT_KEY=changeme-generate-random-hash
OLLAMA_BASE_URL=http://litellm:4000
OPENAI_API_BASE_URL=http://litellm:4000/v1
OPENAI_API_KEY=sk-litellm-master-key

# LiteLLM Database Settings
# DATABASE_URL is already defined above for both services
STORE_MODEL_IN_DB=true

# LiteLLM Cache Settings (Redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CONNECTION_POOL_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=0.1

# LiteLLM Proxy Settings
PROXY_BASE_URL=http://localhost:4000
PROXY_BATCH_WRITE_AT=10
REQUEST_TIMEOUT=6000
LITELLM_LOG=INFO
SET_VERBOSE=false

# LiteLLM UI Settings (optional)
UI_USERNAME=admin
UI_PASSWORD=changeme

# Additional LiteLLM Settings
DISABLE_ADMIN_UI=false
DISABLE_ADMIN_ENDPOINTS=false
DISABLE_LLM_ENDPOINTS=false

# Security & Authentication
ENABLE_SIGNUP=true
ENABLE_LOGIN_FORM=true
DEFAULT_USER_ROLE=user
ENABLE_ADMIN_EXPORT=true
ENABLE_ADMIN_CHAT_ACCESS=true
SAFE_MODE=false

# Features
ENABLE_RAG_WEB_SEARCH=false
ENABLE_WEB_SEARCH=false
ENABLE_IMAGE_GENERATION=false
ENABLE_CODE_EXECUTION=true
ENABLE_CHANNELS=false
ENABLE_COMMUNITY_SHARING=true
ENABLE_MESSAGE_RATING=true
ENABLE_EVALUATION_ARENA_MODELS=true
ENABLE_TAGS_GENERATION=true
ENABLE_AUTOCOMPLETE_GENERATION=true

# User Tracking (for LiteLLM integration)
ENABLE_FORWARD_USER_INFO_HEADERS=true

# RAG Configuration
RAG_EMBEDDING_ENGINE=
RAG_RERANKING_MODEL=
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_EMBEDDING_MODEL_AUTO_UPDATE=true
RAG_RERANKING_MODEL_AUTO_UPDATE=true
ENABLE_RAG_LOCAL_WEB_FETCH=false
ENABLE_RAG_WEB_LOADER_SSL_VERIFICATION=true

# Search Configuration (when enabled)
WEB_SEARCH_ENGINE=
WEB_SEARCH_RESULT_COUNT=3
WEB_SEARCH_CONCURRENT_REQUESTS=10

# Optional: API Keys for various services (add as needed)
# SEARXNG_QUERY_URL=http://searxng:8080/search?q=<query>
# TAVILY_API_KEY=
# BRAVE_SEARCH_API_KEY=
# SERPER_API_KEY=
# SERPSTACK_API_KEY=
# GOOGLE_PSE_API_KEY=
# GOOGLE_PSE_ENGINE_ID=

# Image Generation (when enabled)
# IMAGE_GENERATION_ENGINE=openai
# AUTOMATIC1111_BASE_URL=
# COMFYUI_BASE_URL=

# Audio/STT Configuration
AUDIO_STT_ENGINE=
AUDIO_STT_MODEL=
WHISPER_MODEL=Systran/faster-whisper-base
WHISPER_MODEL_DIR=/app/backend/data/cache/whisper/models

# Code Execution
CODE_EXECUTION_ENGINE=pyodide
CODE_EXECUTION_JUPYTER_URL=

# Performance & Scaling
THREAD_POOL_SIZE=40
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=30

# Websocket Support
ENABLE_WEBSOCKET_SUPPORT=true
WEBSOCKET_MANAGER=
WEBSOCKET_REDIS_URL=

# Redis Configuration (for multi-node deployments)
# REDIS_URL=redis://redis:6379/0
# WEBSOCKET_REDIS_URL=redis://redis:6379/1
# WEBSOCKET_MANAGER=redis

# OAuth Configuration (optional)
# ENABLE_OAUTH_SIGNUP=false
# OAUTH_MERGE_ACCOUNTS_BY_EMAIL=false

# Storage Configuration (optional)
# S3_ENDPOINT_URL=
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=

# Logging
GLOBAL_LOG_LEVEL=ERROR

# GPU Support (uncomment if using NVIDIA GPU)
# USE_CUDA_DOCKER=false

