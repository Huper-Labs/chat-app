# Database Configuration
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://postgres:changeme@postgres:5432/openwebui

# Open WebUI Core Configuration
WEBUI_SECRET_KEY=changeme
WEBUI_NAME=Open WebUI
WEBUI_URL=http://localhost:3000
ENV=prod

# LiteLLM Configuration
LITELLM_MASTER_KEY=changeme
OLLAMA_BASE_URL=http://litellm:4000
OPENAI_API_BASE_URL=http://litellm:4000/v1
OPENAI_API_KEY=sk-litellm-master-key

# Security & Authentication
ENABLE_SIGNUP=true
ENABLE_LOGIN_FORM=true
DEFAULT_USER_ROLE=user
ENABLE_ADMIN_EXPORT=true
ENABLE_ADMIN_CHAT_ACCESS=true

# Features
ENABLE_RAG_WEB_SEARCH=false
ENABLE_WEB_SEARCH=false
ENABLE_IMAGE_GENERATION=false
ENABLE_CODE_EXECUTION=true
ENABLE_CHANNELS=false
ENABLE_COMMUNITY_SHARING=true
ENABLE_MESSAGE_RATING=true

# RAG Configuration
RAG_EMBEDDING_ENGINE=
RAG_RERANKING_MODEL=
RAG_EMBEDDING_MODEL=
ENABLE_RAG_LOCAL_WEB_FETCH=false
ENABLE_RAG_WEB_LOADER_SSL_VERIFICATION=true

# Search Configuration (when enabled)
WEB_SEARCH_ENGINE=
WEB_SEARCH_RESULT_COUNT=3
WEB_SEARCH_CONCURRENT_REQUESTS=10

